<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/thekc"
                                                   tools:context=".MainActivity">


    <EditText
            android:id="@+id/ed_password"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.655"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_email"
            app:layout_constraintVertical_bias="0.0" />

    <EditText
            android:id="@+id/ed_email"
            android:layout_width="353dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:ems="10"
            android:hint=" E-mail Address"
            android:inputType="textEmailAddress"
            android:textColor="#ffffff"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.449" />

    <Button
            android:id="@+id/sign_in_button"
            android:layout_width="121dp"
            android:layout_height="48dp"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="sans-serif-black"
            android:text="L O G I N"
            android:onClick="Login"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.642" />

    <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="#00ffffff"
            android:fontFamily="sans-serif-black"
            android:onClick="moveToRegistration"
            android:text="S I G N - U P"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_button"
            app:layout_constraintVertical_bias="0.081"
            tools:ignore="OnClick" />

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView24"
            android:layout_width="137dp"
            android:layout_height="134dp"
            android:layout_marginTop="132dp"
            app:layout_constraintBottom_toTopOf="@+id/txtname2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.839"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/medicallogoforkenko" />


</androidx.constraintlayout.widget.ConstraintLayout>